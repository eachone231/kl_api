[Unit]
Description=KL API (FastAPI via Gunicorn)
After=network.target

[Service]
User=www-data
Group=www-data
WorkingDirectory=/Users/simon/git/kl_api
Environment=PYTHONUNBUFFERED=1
ExecStart=/usr/bin/env gunicorn -c /Users/simon/git/kl_api/gunicorn_conf.py src.main:app
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
